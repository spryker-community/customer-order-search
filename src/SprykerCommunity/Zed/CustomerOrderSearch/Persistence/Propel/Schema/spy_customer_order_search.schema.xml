<?xml version="1.0"?>
<database xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" name="zed"
          xsi:noNamespaceSchemaLocation="http://static.spryker.com/schema-01.xsd"
          namespace="Orm\Zed\CustomerOrderSearch\Persistence" package="src.Orm.Zed.CustomerOrderSearch.Persistence">

    <table name="spy_customer_order_search" identifierQuoting="true">
        <column name="id_customer_order_search" type="BIGINT" autoIncrement="true" primaryKey="true"/>
        <column name="fk_sales_order" type="INTEGER" required="true"/>
        <column name="structured_data" type="LONGVARCHAR" required="true"/>

        <index name="spy_customer_order_search-fk_sales_order">
            <index-column name="fk_sales_order"/>
        </index>

        <id-method-parameter value="spy_customer_order_search_pk_seq"/>

        <behavior name="synchronization">
            <parameter name="resource" value="customer-order"/>
            <parameter name="key_suffix_column" value="fk_sales_order"/>
            <parameter name="queue_group" value="sync.search.customer_order"/>
            <parameter name="params" value="{&quot;type&quot;:&quot;customer_order&quot;}"/>
        </behavior>
        <behavior name="timestampable"/>
    </table>

</database>
